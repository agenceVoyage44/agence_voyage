<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:security="http://www.springframework.org/schema/security"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd">



	<!-- Déclaration du bean dataSource -->
	<bean id="dataSourceBean1"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<!-- Injection des infos de la connexion à la bd -->
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://localhost:3306/db_bovoyage" />
		<property name="username" value="root" />
		<property name="password" value="root" />
	</bean>

	<!-- ***** Authentification Agent ******* -->
	<!-- ***** 1: Configuration de la partie autorisation -->
	<!-- La balise http sert à spécifier les url à sécuriser et les droits d'accés -->
	<security:http>
		<!-- Spécifier les URL à protéger avec l'attribut pattern et les autorisation 
			supportées par ces URL -->
		<security:intercept-url pattern="/agent/**"
			access="ROLE_AGENT" />

		<!-- Utilisation d'un formulaire login perso -->
		<security:form-login login-page="/loginAgent"
			authentication-failure-url="/loginAgentEchec" />

		<!-- Se déconnecter -->
		<security:logout logout-success-url="/logout"
			logout-url="/deconnexion" />

		<!-- La balise dans le cas où l'accés est refusé -->
		<security:access-denied-handler
			error-page="/refus" />
	</security:http>


	<!-- 2: Configuration de la partie authentification -->
	<security:authentication-manager>
		<security:authentication-provider>

			<!-- Utilisation de la base de donnée pour l'authentification -->
			<security:jdbc-user-service
				data-source-ref="dataSourceBean1" users-by-username-query="select mail,mdp,activ from agents where mail=?"
				authorities-by-username-query="SELECT a.mail, r.rolename FROM agents a, roles r WHERE a.id_a=r.a_id AND a.mail=?" />
		</security:authentication-provider>
	</security:authentication-manager>


	<!-- ***** Authentification Client ******* -->
	<!-- ***** 1: Configuration de la partie autorisation -->
	<!-- La balise http sert à spécifier les url à sécuriser et les droits d'accés -->
	<security:http>
		<!-- Spécifier les URL à protéger avec l'attribut pattern et les autorisation 
			supportées par ces URL -->
		<security:intercept-url pattern="/client/**"
			access="ROLE_CLIENT" />

		<!-- Utilisation d'un formulaire login perso -->
		<security:form-login login-page="/loginClient"
			authentication-failure-url="/loginClientEchec" />

		<!-- Se déconnecter -->
		<security:logout logout-success-url="/logout"
			logout-url="/deconnexion" />

		<!-- La balise dans le cas où l'accés est refusé -->
		<security:access-denied-handler
			error-page="/refus" />
	</security:http>


	<!-- 2: Configuration de la partie authentification -->
	<security:authentication-manager>
		<security:authentication-provider>

			<!-- Utilisation de la base de donnée pour l'authentification -->
			<security:jdbc-user-service
				data-source-ref="dataSourceBean1"
				users-by-username-query="select mail,mdp,activ from participants where mail=?"
				authorities-by-username-query="SELECT p.mail, r.rolename FROM participant p, roles r WHERE p.id_p=r.p_id AND p.mail=?" />
		</security:authentication-provider>
	</security:authentication-manager>

</beans>
